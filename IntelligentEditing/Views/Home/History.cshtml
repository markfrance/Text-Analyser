@model IEnumerable<IntelligentEditing.Models.TextFile>

@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>History</h2>

<table class="table">
    <tr>
        <th>
            Date
        </th>
        <th>
           File Name
        </th>
        <th>
            Is English
        </th>
        <th>
            Word Count
        </th>
        <th>
            Repeated phrases
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Date.ToString("d")
        </td>
        <td>
            @item.FileName
        </td>
        <td>
            @item.IsEnglish()
        </td>
        <td>
            @item.GetWordCount()
        </td>
        <td>
            @item.GetRepeatedPhraseDescription()
        </td>
       
    </tr>
}

</table>
